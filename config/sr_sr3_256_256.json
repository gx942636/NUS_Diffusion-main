{
    "name": "sr_NUSNMR",
    "phase": "train", // train or val
    "gpu_ids": [
        1
    ],
    "path": { //set the path
        "log": "logs",
        "tb_logger": "tb_logger",
        "results": "results",
        "checkpoint": "checkpoint",
        "resume_state": null
        // "resume_state": "experiments/sr_CMR_x4x8x10/checkpoint/I550000_E264"
    },
    "datasets": {
        "train": {
            "name": "NUSNMR",
            "mode": "LRHR", // whether need LR img
            "dataroot": "./",
            "datatype": "img", //lmdb or img, path of img files
            "batch_size": 4,
            "num_workers": 8,
            "use_shuffle": true,
            "data_len": 40000 // -1 represents all data used in train
        },
        "val": {
            "name": "NUSNMR",
            "mode": "LRHR",
            "dataroot": "./",
            "datatype": "img", //lmdb or img, path of img files
            "data_len": 10 // data length in validation 
        }
    },
    "model": {
        "which_model_G": "sr3", // use the ddpm or sr3 network structure
        "finetune_norm": false,
        "unet": {
            "in_channel": 2,
            "out_channel": 2,
            "inner_channel": 64,
            "channel_multiplier": [
                1,
                2,
                4,
                8,
                8
            ],
            "attn_res": [
                16
            ],
            "res_blocks": 2,
            "dropout": 0.02
        },
        "beta_schedule": { // use munual beta_schedule for acceleration
            "train": {
                "schedule": "linear",
                "n_timestep": 2000,
                "linear_start": 1e-6,
                "linear_end": 1e-2
            },
            "val": {
                "schedule": "linear",
                "n_timestep": 2000,
                "linear_start": 1e-6,
                "linear_end": 1e-2
            }
        },
        "diffusion": {
            "image_size": 256,
            "image_size_1": 256,
            "image_size_2": 256,
            "channels": 2, //sample channel
            "conditional": false // unconditional generation or unconditional generation(super_resolution)
        }
    },
    "train": {
        "n_iter": 1000000,
        "val_freq": 1e4,
        "save_checkpoint_freq": 1e4,
        "print_freq": 200,
        "optimizer": {
            "type": "adam",
            "lr": 1e-4
        },
        "ema_scheduler": { // not used now
            "step_start_ema": 5000,
            "update_ema_every": 1,
            "ema_decay": 0.9999
        }
    },
    "wandb": {
        "project": "sr_nusnmr"
    }
}