{
    "name": "sr_NUSNMR",
    "phase": "val", // train or val
    "gpu_ids": [
        2
    ],
    "path": { //set the path
        "log": "logs",
        "tb_logger": "tb_logger",
        "results": "results",
        "checkpoint": "checkpoint",
        //"resume_state": "experiments/sr_NUSNMR_250927_062659/checkpoint/I540000_E54"
        "resume_state": "experiments/sr_NUSNMR_250903_131642/checkpoint/I700000_E70"
        //"resume_state": "experiments/sr_NUSNMR_250731_171115/checkpoint/I540000_E54"
    },
    "datasets": {
        "train": {
            "name": "NUSNMR",
            "mode": "LRHR", // whether need LR img
            "dataroot": "./",
            "datatype": "img", //lmdb or img, path of img files
            "batch_size": 6,
            "num_workers": 8,
            "use_shuffle": true,
            "data_len": 40000 // -1 represents all data used in train
        },
        "val": {
            "name": "NUSNMR",
            "mode": "LRHR",
            "dataroot": "./",
            "datatype": "img", //lmdb or img, path of img files
            "data_len": 5 // data length in validation
        },
        "test": {
            //"real_data_path": "./data/hl/spec_HSQC_Gb1_data",
            //"real_data_path": "./data/unreal-170-768",
            //"real_data_path": "./data/titr/titr-256-300",
            //"real_data_path": "./data/lyq/spec_msrb",
            "real_data_path": "./data/A3DK08_hyper_spec_slices/label_spec",
            //"real_data_path": null,
            "sample_rate": 0.08
        }
    },
    "model": {
        "which_model_G": "sr3", // use the ddpm or sr3 network structure
        "finetune_norm": false,
        "unet": {
            "in_channel": 2,
            "out_channel": 2,
            "inner_channel": 64,
            "channel_multiplier": [
                1,
                2,
                4,
                8,
                8
            ],
            "attn_res": [
                16
            ],
            "res_blocks": 2,
            "dropout": 0.02
        },
        "beta_schedule": { // use munual beta_schedule for acceleration
            "train": {
                "schedule": "linear",
                "n_timestep": 2000,
                "linear_start": 1e-6,
                "linear_end": 1e-2
            },
            "val": {
                "schedule": "linear",
                "n_timestep": 2000,
                "linear_start": 1e-6,
                "linear_end": 1e-2
            }
        },
        "diffusion": {
            "image_size": 128,
            "image_size_1": 128,
            "image_size_2": 128,
            "channels": 2, //sample channel
            "conditional": true, // unconditional generation or unconditional generation(super_resolution)
            "data_consistency": true, //use data consistency in reverse process or not
            "thresholding": true // use threshold functiong or not
        }
    },
    "train": {
        "n_iter": 1000000,
        "val_freq": 1e4,
        "save_checkpoint_freq": 1e4,
        "print_freq": 200,
        "optimizer": {
            "type": "adam",
            "lr": 1e-4
        },
        "ema_scheduler": { // not used now
            "step_start_ema": 5000,
            "update_ema_every": 1,
            "ema_decay": 0.9999
        }
    },
    "wandb": {
        "project": "sr_nusnmr"
    }
}